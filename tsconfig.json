{
  "compilerOptions": {
    "target": "ES2022",             // or ES2020, ES2018
    "module": "commonjs",           // or "ESNext" if using ES Modules
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["api/**/*", "middlewares/**/*", "types/**/*", "lib/**/*"]
}